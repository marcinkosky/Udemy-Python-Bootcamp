def old_macdonald(name):
    '''
    Docstring: OLD MACDONALD (Python Udemy Bootcamp excercise)
    Input: A string
    Output: Write a function that capitalizes the first and fourth letters of a name
    '''
    new_name = name[0].upper() + name[1:3] + name[3].upper() + name[4:]
    return new_name

s1 = old_macdonald('macdonald')
print(s1)
